<!DOCTYPE html>  
<html lang="en">  
  <head>
    <meta charset="utf-8">
    <title>Node Scrim</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="description" content="" />
    <meta name="keywords" content="" />
    <script src="../js/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <link href="http://www.picnicss.com/nut/picnic_3_2+nav+modal_2.min.css" rel="stylesheet" type="text/css">
    <script type="text/javascript">
		$(document).ready(function() {
			$.ajax({
				url: '/room',
				method: 'POST',
				success: function(data) { 
					$("#roomLink").attr("href", "/room/"+data.roomId);
				},
				error: function(data) {
					console.log(data);
				}
			});

			$("#create").click(function() {
				$.ajax({
					url: '/server/create',
					method: 'POST',
					data : { map : "de_nuke" }
				});
			});
		});
	</script>
  </head>
  <body>
  	<div class="row">
  		<%if (env == 1) { %>
  			<div id="create" class="button">Create Server</div>
  			<div id="rcon" class="button">Rcon!</div>
  		<% } %>
		<div>
			<%if (displayName != null) { %>
				<h1>Currently signed in as : <%= displayName %> </h1>
				<img src="<%= photo_l %>" />
			<% } %>
		</div>
		<%if (displayName != null) { %>
			<div><a id="roomLink" href="#" class="button">Get Started!</a></div>
			<div><a id="createLobby" href="#" class="button">Create Lobby</a></div>
		<% } else { %>
			<div><a href="/auth/steam"><img src="../images/steam_small.png" /></a></div>
		<% } %>
		<div></div>
	</div>
  </body>
</html>  


